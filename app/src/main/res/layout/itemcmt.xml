<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarcmt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/nen">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/tvCmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatarcmt"
        android:layout_marginLeft="10dp"
        android:text="hello"
        android:minWidth="40dp"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edt9"
        />
    <TextView
        android:id="@+id/tvNameCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Hoàng Long"
        android:layout_toRightOf="@id/avatarcmt"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textFontWeight="900"/>
    <TextView
        android:id="@+id/tvAccCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Hoàng Long"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textFontWeight="900"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvTimeCmt"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@id/tvCmt"
        android:text="3h"
        android:layout_marginLeft="70dp"
        />

</RelativeLayout>