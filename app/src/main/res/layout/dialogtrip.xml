<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/edt7">

    <TextView
        android:id="@+id/txtLocationTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Địa điểm: "
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtlocationTrip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_below="@+id/txtLocationTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Thời gian: "
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtTimeTrip"
        android:layout_below="@+id/edtlocation"
        android:layout_width="200dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_below="@+id/txtLocationTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Chi phí: "
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtCost"
        android:layout_below="@+id/edtlocation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_below="@+id/txtLocationTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:text="Số người: "
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtNumberPeople"
        android:layout_below="@+id/edtlocation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_below="@+id/txtLocationTrip"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Thời gian dự kiến: "
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtTimeIntend"
        android:layout_below="@+id/edtlocation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="210dp"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/imgPicker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/calendar"
        android:layout_toRightOf="@id/edtTimeIntend"
        android:layout_below="@id/edtNumberPeople"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:id="@+id/btnAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:text="Thêm"/>
</RelativeLayout>