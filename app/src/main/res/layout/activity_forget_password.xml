<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SignIn"
    android:background="@drawable/nen21"
    android:fontFamily="@font/robotocondensedbold"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/formqmk"
        android:layout_below="@id/logo"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/frmtitleqmk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#76FFFA"
            android:fontFamily="@font/robotocondensedbold"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="57dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            tools:targetApi="jelly_bean"
            tools:ignore="DuplicateIds"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <EditText
            android:id="@+id/edtemailqmk"
            android:layout_below="@id/frmtitleqmk"
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/editext"
            android:freezesText="true"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/robotocondenseditalic"
            android:hint="E-mail đăng ký"
            tools:targetApi="jelly_bean"
            android:paddingLeft="55dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/iconemailqmk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/frmtitleqmk"
            android:layout_marginTop="45dp"
            android:background="@mipmap/email"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edttkqmk"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_below="@id/edtemailqmk"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext"
            android:fontFamily="@font/robotocondenseditalic"
            android:freezesText="true"
            android:hint="Tài khoản"
            android:maxLines="1"
            android:inputType="text"
            android:orientation="vertical"
            android:paddingLeft="55dp"
            tools:targetApi="jelly_bean" />
        <ImageView
            android:id="@+id/iconpassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/edtemailqmk"
            android:layout_marginTop="25dp"
            android:background="@mipmap/username"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/edtcapchaqmk"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_below="@id/edttkqmk"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext"
            android:fontFamily="@font/robotocondenseditalic"
            android:freezesText="true"
            android:maxLines="1"
            android:maxLength="4"
            android:hint="Nhập mã xác thực"
            android:inputType="number"
            android:orientation="vertical"
            android:paddingLeft="55dp"
            tools:targetApi="jelly_bean" />
        <ImageView
            android:id="@+id/iconcapcha"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/edttkqmk"
            android:layout_marginTop="25dp"
            android:background="@mipmap/capcha"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
        <TextView
            android:id="@+id/ranCap"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/capcha"
            android:text="9999"
            android:fontFamily="@font/robotocondensedbold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:layout_below="@id/edtcapchaqmk"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="165dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Xác Thực: "
            android:textColor="#FFFFFF"
            android:fontFamily="@font/robotocondensedbold"
            android:textSize="20dp"
            android:layout_below="@id/edtcapchaqmk"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp" />
        <TextView
            android:id="@+id/notifyqmk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ranCap"
            android:fontFamily="@font/robotocondensedbold"
            android:textColor="#ffff00"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnqmk"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
             android:layout_below="@id/notifyqmk"
            android:text="Gửi"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:fontFamily="@font/robotocondensedbold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:onClick="fgPass"
            tools:ignore="OnClick" />

    </RelativeLayout>
</RelativeLayout>
