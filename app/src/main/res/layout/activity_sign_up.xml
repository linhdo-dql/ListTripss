<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SignUp"
    android:background="@drawable/nen4"
    android:fontFamily="@font/robotocondensedbold"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/frmtitledk"
        android:layout_marginTop="30dp"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/formdk"
        android:layout_below="@id/frmtitledk"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/frmtitledk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#76FFFA"
            android:fontFamily="@font/robotocondensedbold"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="57dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            tools:targetApi="jelly_bean"
            tools:ignore="DuplicateIds"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <EditText
            android:id="@+id/edtemaildk"
            android:layout_below="@id/frmtitledk"
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/editext"
            android:inputType="textEmailAddress"
            android:freezesText="true"
            android:fontFamily="@font/robotocondenseditalic"
            android:maxLines="1"            android:hint="E-mail"
            tools:targetApi="jelly_bean"
            android:paddingLeft="55dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/iconsdt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/frmtitledk"
            android:layout_marginTop="45dp"
            android:background="@mipmap/email"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/edttkdk"
            android:layout_below="@id/edtemaildk"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/editext"
            android:freezesText="true"
            android:fontFamily="@font/robotocondenseditalic"
            android:hint="Tài khoản"
            tools:targetApi="jelly_bean"
            android:paddingLeft="55dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/iconusername"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/edtemaildk"
            android:layout_marginTop="20dp"
            android:background="@mipmap/username"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edtmkdk"
            android:layout_below="@id/edttkdk"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/editext"
            android:inputType="textPassword"
            android:freezesText="true"
            android:fontFamily="@font/robotocondenseditalic"
            android:hint="Mật khẩu"
            tools:targetApi="jelly_bean"
            android:orientation="vertical"
            android:paddingLeft="55dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/iconpassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/edttkdk"
            android:layout_marginTop="20dp"
            android:background="@mipmap/password"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
        <EditText
            android:id="@+id/edtnhaplai"
            android:layout_below="@id/edtmkdk"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/editext"
            android:inputType="textPassword"
            android:freezesText="true"
            android:fontFamily="@font/robotocondenseditalic"
            android:hint="Nhập lại mật khẩu"
            tools:targetApi="jelly_bean"
            android:orientation="vertical"
            android:paddingLeft="55dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/iconrepass"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/edtmkdk"
            android:layout_marginTop="20dp"
            android:background="@mipmap/repass"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
        <Button
            android:id="@+id/btnsignup"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Đăng Ký"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:fontFamily="@font/robotocondensedbold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/dieukhoanchinhsach"
            android:layout_centerHorizontal="true"
            android:onClick="signup"
            />
        <RelativeLayout
            android:id="@+id/dieukhoanchinhsach"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtnhaplai"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/ttdieukhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bằng việc đăng ký, bạn đã chấp nhận "
                android:textColor="#76FFFA"
                android:fontFamily="@font/robotocondensedbold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/dieukhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dieukhoan"
                android:textColor="#AEEA00"
                android:fontFamily="@font/robotocondensedbold"
                android:layout_below="@id/ttdieukhoan"
                android:layout_toLeftOf="@id/and"/>
            <TextView
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" và "
                android:textColor="#76FFFA"
                android:layout_centerInParent="true"
                android:layout_below="@id/ttdieukhoan"
                android:fontFamily="@font/robotocondensedbold"/>
            <TextView
                android:id="@+id/chinhsach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chinhsach"
                android:textColor="#AEEA00"
                android:fontFamily="@font/robotocondensedbold"
                android:layout_toRightOf="@id/and"
                android:layout_below="@id/ttdieukhoan" />
            <TextView
                android:id="@+id/of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="của chúng tôi."
                android:textColor="#76FFFA"
                android:layout_centerInParent="true"
                android:layout_below="@id/and"
                android:fontFamily="@font/robotocondensedbold"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
